<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.projet_final.controller.EventListController" 
      spacing="20" 
      styleClass="event-list-container">
      
    <!-- En-tête -->
    <HBox styleClass="header">
        <Label text="Gestion des Événements" styleClass="title"/>
    </HBox>
    
    <!-- Barre de recherche et actions -->
    <HBox spacing="15" styleClass="search-bar">
        <HBox styleClass="search-field-container" HBox.hgrow="ALWAYS">
            <FontIcon iconLiteral="fas-search" styleClass="search-icon"/>
            <TextField fx:id="searchField" promptText="Rechercher un événement..." styleClass="search-input"/>
        </HBox>
        
        <Button text="Créer un événement" onAction="#onCreateEvent" styleClass="create-button">
            <graphic>
                <FontIcon iconLiteral="fas-plus"/>
            </graphic>
        </Button>
    </HBox>
    
    <!-- Filtres -->
    <HBox spacing="10" styleClass="filters">
        <ComboBox fx:id="typeFilter" promptText="Type d'événement"/>
        <DatePicker fx:id="dateFilter" promptText="Date"/>
        <Button text="Réinitialiser" onAction="#resetFilters" styleClass="reset-button"/>
    </HBox>
    
    <!-- Tableau des événements -->
    <TableView fx:id="eventTable" VBox.vgrow="ALWAYS" styleClass="event-table">
        <columns>
            <TableColumn text="Nom" fx:id="colNom" prefWidth="200"/>
            <TableColumn text="Date" fx:id="colDate" prefWidth="150"/>
            <TableColumn text="Lieu" fx:id="colLieu" prefWidth="150"/>
            <TableColumn text="Type" fx:id="colType" prefWidth="100"/>
            <TableColumn text="Places" fx:id="colCapacite" prefWidth="100"/>
            <TableColumn text="Actions" fx:id="colActions" prefWidth="150"/>
        </columns>
    </TableView>
    
    <!-- Pagination -->
    <HBox styleClass="pagination">
        <Pagination fx:id="pagination"/>
    </HBox>
</VBox>