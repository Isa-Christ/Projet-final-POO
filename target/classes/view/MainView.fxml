<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.projet_final.controller.MainViewController">
    <left>
        <VBox spacing="10" style="-fx-background-color: #222; -fx-padding: 20;">
            <Label text="Gestion Événements" style="-fx-text-fill: white; -fx-font-size: 18;"/>
            <Button text="Tableau de bord" fx:id="dashboardBtn" onAction="#showDashboard"/>
            <Button text="Événements" fx:id="eventsBtn" onAction="#showEvents"/>
            <Button text="Participants" fx:id="participantsBtn" onAction="#showParticipants"/>
            <Button text="Organisateurs" fx:id="organisateursBtn" onAction="#showOrganisateurs"/>
            <Button text="Notifications" fx:id="notificationsBtn" onAction="#showNotifications"/>
        </VBox>
    </left>
    <center>
        <StackPane fx:id="contentPane"/>
    </center>
</BorderPane>