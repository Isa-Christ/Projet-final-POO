<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.Region?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.projet_final.controller.DashboardController" 
      spacing="20" style="-fx-padding: 20;">
    
    <!-- En-tête -->
    <Label text="Tableau de Bord" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
    
    <!-- Statistiques -->
    <GridPane hgap="20" vgap="10">
        <VBox styleClass="stat-box" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <Label text="Événements à venir"/>
            <Label fx:id="eventCountLabel" styleClass="stat-number"/>
        </VBox>
        
        <VBox styleClass="stat-box" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <Label text="Participants total"/>
            <Label fx:id="participantCountLabel" styleClass="stat-number"/>
        </VBox>
        
        <VBox styleClass="stat-box" GridPane.columnIndex="2" GridPane.rowIndex="0">
            <Label text="Notifications non lues"/>
            <Label fx:id="notificationCountLabel" styleClass="stat-number"/>
        </VBox>
    </GridPane>
    
    <!-- Prochains événements -->
    <VBox spacing="10">
        <Label text="Prochains événements" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
        <ListView fx:id="upcomingEventsList" prefHeight="200"/>
    </VBox>
    
    <!-- Notifications récentes -->
    <VBox spacing="10">
        <Label text="Notifications récentes" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
        <ListView fx:id="recentNotificationsList" prefHeight="150"/>
    </VBox>
    
</VBox>